{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
	  "resolveJsonModule": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "types": [
      "obsidian-typings"
    ],
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
  },
  "include": [
    "src/**/*.ts",
    "vitest.config.ts"
  ]
}
